{{- include header }}
<div class="content">
  <table class="ui padded table segment">
    <thead>
      <tr>
        <th>title</th>
        <th>author</th>
        <th>time</th>
        <th>operator</th>
      </tr>
    </thead>
    {{ posts.forEach(function(post) { }}
    <tbody>
      <tr>
        <td><a href="/#p/{{= post._id }}">{{= post.title }}</td>
          <td>{{= post.name }}</td>
          <td>{{= post.time.day }}</td>
          <td>
            <div class="mini ui remove-article red button" href="api/p/remove/{{=post._id}}">
              <i class="trash icon"></i>
              Trash
            </div>
          </a>
          <a href="/admin/p/edit/{{= post._id}}">
            <div class="mini blue ui button">
              <i class="edit icon"></i>
              Edit
            </div>
          </a>
        </td>
      </tr>
    </tbody>
    {{ }) }}
  </table>
  <div class="ui borderless pagination menu">
    {{ if (!isFirstPage) { }}
    <a class="item" href="/admin/list/{{=page-1}}">
     <i class="icon left arrow"></i> Previous
    </a>
   {{  } }}
    {{ for(var i= 1 ; i<= numPage; i++) { }}
      <a class="item" href="/admin/list/{{=i}}">{{=i}}</a>
    {{  } }}
    {{ if (!isLastPage) { }}
      <a class="item" href="/admin/list/{{=page+1}}">
       Next <i class="icon right arrow"></i>
      </a>
    {{  } }}
  </div>
</div>
</div>
<div class="footer">
</div>
</div>
</body>
<script src='/javascripts/jquery-1.10.2.min.js'></script>
<script src='/javascripts/semantic.min.js'></script>
<script src='/javascripts/underscore-min.js'></script>
<script src='/javascripts/backbone-min.js'></script>
<script src='/javascripts/admin.js'></script>
</html>
