{{- include header }}
<div class="content row">
  <div class="col-md-1"></div>
  <div class="page-container col-md-7">
    <h2 class="post-title">{{=post.title}}</h2>
    <p class="post-status">POST on:&nbsp;<span class="time-sty">{{=post.time.seconds}}</span> Read:&nbsp;{{=post.pv}} tags:&nbsp;#<a class="post-tag"href="/w/tag/{{=post.tags}}">{{=post.tags}}</a></p>
    <p>{{-post.post}}</p>
    <!-- Duoshuo Comment BEGIN -->
    <div class="ds-thread" data-thread-key="{{=post._id}}" data-title="{{=post.title}}" ></div>
    <script type="text/javascript">
    var duoshuoQuery = {short_name:"huip"};
    (function() {
      var ds = document.createElement('script');
      ds.type = 'text/javascript';ds.async = true;
      ds.src = 'http://static.duoshuo.com/embed.js';
      ds.charset = 'UTF-8';
      (document.getElementsByTagName('head')[0] 
     || document.getElementsByTagName('body')[0]).appendChild(ds);
     })();
    </script>
    <!-- Duoshuo Comment END -->    
  </div>
  {{-include widgets }}
</div>
{{- include footer }}
